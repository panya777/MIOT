DC motor
const int IN1 = 7;  
const int IN2 = 8;  

void setup() {
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
}

void loop()
{
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  delay(5000);

  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  delay(2000);
  
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  delay(1000); 
  
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  delay(2000); 
  
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  delay(1000);
